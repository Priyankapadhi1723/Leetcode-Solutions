class Solution {
public:
    int minMoves(vector<int>& nums) {
        int min=nums[0];
        long long res=0;
        int n=nums.size();
        for(int i=0; i<n; i++){
            if (nums[i]<min){
                min=nums[i];
            }
        }
        for(int i=0; i<n; i++){
            res+=nums[i]-min;
        }
        return res;
    }
};
