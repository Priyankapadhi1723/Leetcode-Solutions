class Solution {
public:
    bool isPalindrome(string s) {
       string copy;
       for(char c:s){
        if(isalnum(c)){
            copy+=tolower(c);
        }
       }
       int i=0;
       int j=copy.size()-1;
       while(i<j){
        if(copy[i]!=copy[j]){
            return false;
        }
        i++;
        j--;
       }
       return true;
    }
};
